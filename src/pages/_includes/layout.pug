block variables
  -
    var page;
    var title;

doctype html
html(lang="en")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=iso-8859-1")
    title Georgia Golden Olympics
      if page !== 'home'
        |  - #{title}
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css")
    -
      // new random number every build to bust cache
      // effective but not efficient
      var rand = Math.floor(Math.random() * Math.pow(10, 16));
    link(rel="stylesheet" type="text/css" href=`/css/ggo.css?v=${rand}`)
  body(class=`ggo-${page}`)
    #header.container(role="banner")
      .wrapper
        h1.box.type3c
          a(href="/"): img(src="/images/ggo.gif" alt="Georgia Golden Olympics" title="Home")
        ul#mainmenu.box.type8.pad1(role="nav")
          li.box.type2.participate.first
            a(href="/participate/") Participate
          li.box.type2.volunteer
            a(href="/volunteer/") Volunteer
          li.box.type2.sponsor
            a(href="/sponsor/") Sponsor
          li.box.type2.about
            a(href="/about/") About GGO

    div(role="main")

      //- #notice.container.space
