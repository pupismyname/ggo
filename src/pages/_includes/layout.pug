      block content

    #footer.container(role="contentinfo")
      .wrapper
        .box.type6c
          p &copy; #{copyright} #[a(href="https://georgiagoldenolympics.org/") Georgia Golden Olympics]
        .box.type6c.last
          p Contact GGO Coordinator #[a(href="mailto:vcpilgrim@gmail.com") Vicki Pilgrim] at 770-867-3603

    script(src="/js/jquery-3.5.1.min.js")
    script(src=`/js/ggo.js?v=${rand}`)
